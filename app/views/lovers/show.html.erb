<h1>恋人の詳細画面</h1>
<p>名前: <%= @lover.name %></p>
<p>ステータス: <%= @lover.status %></p>

<%= form_with(model: @activity, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :content, '活動内容' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date, '活動日' %>
    <%= f.text_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :lover_id => @lover.id %>
  </div>
      
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
<%= link_to '編集', edit_lover_path(@lover) %>
<%= link_to "削除", @lover, method: :delete, data: {confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
<%= link_to 'トップページへ戻る',root_url%>    